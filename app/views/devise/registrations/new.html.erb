<p id="notice"></p>
<div class="container">
<div class="row">
<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">

<h2>新規会員登録</h2>
<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>

<strong>おなまえ</strong>
  <div class="field mt-2">
    <%= f.label :family_name, "姓" %>
    <%= f.text_field :family_name, autofocus: true %>

    <%= f.label :first_name, "名" %>
    <%= f.text_field :first_name %>
  </div>

<strong>おなまえ（カナ）</strong>
  <div class="field mt-2">
    <%= f.label :kana_family_name, "セイ" %>
    <%= f.text_field :family_name %>

    <%= f.label :kana_first_name, "メイ" %>
    <%= f.text_field :kana_first_name %>
  </div>

<strong>ご連絡先</strong>
  <div class="field">
    <%= f.label :email, "メールアドレス"%>
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :phone_number, "電話番号"%>
    <%= f.text_field :phone_number, autocomplete: "phone_number" %>
  </div>


<strong>ご住所</strong>
  <div class="field">
    <%= f.label :postal_code, "郵便番号"%>
    <%= f.text_field :postal_code, autocomplete: "postal_code" %>
  </div>

    <div class="field">
    <%= f.label :address, "住所"%>
    <%= f.text_field :address, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
</div>
</div>