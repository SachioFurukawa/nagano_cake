<div class="container mt-5">
<div class="row">
<div class="mx-auto">

<h2>商品一覧</h2>
　　<div class="text-right">
	　<%= link_to "商品登録", new_admin_other_item_path, class: "btn btn-primary" %>
	</div>
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1">
			<table class="table table-hover table-resposive">
				<thead>
					<tr class="active">
						<th>商品ID</th>
						<th>商品名</th>
						<th>税込価格</th>
						<th>ジャンル</th>
						<th>ステータス</th>
					</tr>
				</thead>
				<tbody>
					<% @items.each do |item| %>
					<tr>
						<td>
							<%= item.id %>
						</td>
						<td>
							<%= link_to item.name, admin_other_item_path(item.id) %>
						</td>
						<td>
							<%= item.add_tax_price.to_s(:delimited) %>
						</td>
						<td>
							<%= item.genre.name %>
						</td>
						<td>
							<% if item.is_active == true %>
							  <%= "販売中" %>
							<% else %>
							  <%= "売り切れ" %>
							<% end %>
						</td>
					</tr>
				  <% end %>
				</tbody>
			</table>

	 </div>
 </div>

</div>
</div>
</div>