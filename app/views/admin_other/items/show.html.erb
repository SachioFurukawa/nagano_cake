<div class="container">
	<br>
	<div class="row">
		<h2>商品詳細</h2>
	</div>

	<div class="row">
		<div class="col-xs-4">
			<%= attachment_image_tag @item, :image, format: "jpg", fallback: "no_image", size:'245x245' %>
		</div>

		<div class="col-xs-8">
			<div class="table-responsive">
				<table class="table text-nowrap">
					<tbody>
						<tr>
							<td>商品名</td>
							<td>
								<%= @item.name %>
							</td>
						</tr>
						<tr>
							<td>商品説明</td>
							<td>
								<%= @item.introduction %>
							</td>
						</tr>
						<tr>
							<td>ジャンル</td>
							<td>
								<%= @item.genre.name %>
							</td>
						</tr>
						<tr>
							<td>税込価格（税別価格）</td>
							<td>
								<%= @item.add_tax_price.to_s(:delimited) %>
								(<%= @item.price %>)円
							</td>
						</tr>
						<tr>
							<td>販売ステータス</td>
							<td>
								<% if @item.is_active == true %>
									販売中
								<% else %>
									売り切れ
								<% end %>
							</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="text-right">
			<%= link_to "編集する", edit_admin_other_item_path(@item.id), class: "btn btn-primary" %>
		</div>
	</div>



</div>