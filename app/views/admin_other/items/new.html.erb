<div class="container mt-5">
<div class="row">
<div class="mx-auto">

<h2>商品登録</h2>

　<%= form_with model: @item, url: admin_other_items_path, local:true do |f| %>

    <div>
      <%= attachment_image_tag @item, :image,format: 'jpg', fallback: "no_image.jpg", size:'250x250' %>
      <%= f.attachment_field :image, placeholder:"商品画像" %>
    </div>
    <div>
      <%= f.label :name, '商品名' %>
      <%= f.text_field :name %>
    </div>
    <div class="form-group">
      <%= f.label :introduction, '商品説明' %>
      <%= f.text_area :introduction %>
    </div>
    <div class="form-group">
      <%= f.label :genre_id, 'ジャンル' %>
      <%= f.collection_select :genre_id, Genre.all, :id, :name %>
    </div>
    <div class="form-group">
      <%= f.label :price, '税抜価格' %>
      <%= f.text_field :price %>円
    </div>
    <div class="form-group">
      <%= f.label :is_active, '販売ステータス' %>
      <%= f.select :is_active, {
          "販売中": true,
          "売り切れ": false
          } %>
    </div>
    <div class="row">
      <%= f.submit "新規登録" , class: "btn btn-primary"  %>
    </div>
  <% end %>

</div>
</div>
</div>