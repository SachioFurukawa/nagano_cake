<div class="container mt-5">
<div class="row">
<div class="mx-auto">

<div>
  <div>
    <h2>商品編集</h2>
  </div>

  <div>
    <%= form_for(@item,url: admin_other_item_path(@item.id)) do |f| %>
      <div>
        <%= attachment_image_tag @item, :image,format: 'jpg', fallback: "no_image", size:'245x245' %>
      </div>

      <div>
        <p>商品名 <%= f.text_field :name %> </p>
        <p>商品説明 <%= f.text_area :introduction, size: 25 %> </p>
        <p>ジャンル <%= f.collection_select :genre_id, Genre.all, :id, :name %> </p>
        <p>税抜価格 <%= f.text_field :price %>円 </p>
        <p>販売ステータス <%= f.select :is_active, {
          "販売中": true,
          "販売停止中": false
        } %> </p>
        <%= f.submit "変更を保存",class: "btn btn-primary" %>
      </div>
    <% end %>
</div>

</div>
</div>
</div>