<div class="container mt-5">
<div class="row">
<div class="mx-auto">

<h2>ジャンル一覧・追加</h2>
<br>
  <div>
    <%= form_with model: @genre,url: admin_other_genres_path, local:true do |f| %>
    <div class="form-group">
    <div class="col-xs-8">
      <%= f.label :name, "ジャンル"%>
      <%= f.text_field :name, autofocus: true %>
      <%= f.submit "新規登録", class: "btn btn-primary" %>
    </div>
    </div>
    <% end %>
  </div>
  <table>
    <tr>
      <th><h5>＜ジャンル＞</h5></th>
      <th></th>
      <th></th>
      </tr>
        <% @genres.each do |genre| %>
      <tr>
      <td><%= genre.name %>　</td>
      <td><%= link_to "編集する", edit_admin_other_genre_path(genre.id), class: "btn btn-primary"  %></td>
      </tr>
        <% end %>
  </table>

</div>
</div>
</div>