<div class="container mt-5">
<div class="row">
  <h2>注文履歴一覧</h2>
</div>

  <div class="row">
    <div class="col-xs-10 table-responsive">
      <table class="table">
          <tr class="active">
              <th>購入日時</th>
              <th>購入者</th>
              <th>注文個数</th>
              <th>注文ステータス</th>
          </tr>
          <tr>
  			    <% @orders.each do |order| %>
  			      <tr>
                <td><%= link_to order.created_at.strftime('%Y年%m月%d日%H時%M分'), admin_other_order_path(order) %></td>
                <td><%= order.user.full_name %></td>
                <td><%= order.order_details.sum(:amount) %></td>
                <td><%= order.status %></td>
              </tr>
  　　   　　　<% end %>
  				</tr>
      </table>
    </div>
  </div>

</div>