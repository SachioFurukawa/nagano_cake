<div class="container mt-5">
<div class="row">
<div class="mx-auto">

    <div class="col-xs-12 col-xs-offset-1">
      <h2 style="width:360px">注文情報確認</h2>
    </div>

    <div class="row">
      <div class="col-xs-6 col-xs-offset-1">
       <table class="table table-hover table-bordered" style="font-size: 12pt; line-height: 100%; ">
         <thead>
           <tr class="active">
             <th style="width:300px; height:60px">商品名</th>
             <th style="width:100px">単価（税込）</th>
             <th style="width:100px">数量</th>
             <th style="width:100px">小計</th>
           </tr>
         </thead>
           <tbody>
            <% @cart_items.each do |cart_item| %>
             <tr>
                <td  style="height:60px">
                  <%= attachment_image_tag cart_item.item, :image, format: 'jpg', class: "pull-left profile-img", fallback: "logo.png", size:'40x40' %>
                  <%= cart_item.item.name %>
                </td>
                <td><%= money_notation((cart_item.item.price * @tax)) %>円</td>
                <td><%= cart_item.amount %></td>
                <td><%= money_notation((cart_item.item.price*cart_item.amount * @tax))%>円</td>
             </tr>
            <% end %>
           </tbody>
       </table>
     </div>

     <div class="col-xs-2 col-xs-offset-0" style="font-size: 12pt; line-height: 100%; ">
       <table class="table table-hover table-bordered" style="font-size: 12pt; line-height: 100%; ">
           <tbody>
             <tr>
                <th class="active" style="width:100px; height:60px">送料</th>
                  <td style="width:100px"><%= @postage %>円</td>
             </tr>
             <tr>
                <th class="active" style="height:60px">商品合計</th>
                 <td><%= money_notation(@cart_items.map{ |cp| (cp.item.price * cp.amount * @tax).round }.sum) %>円</td>
             </tr>
             <tr>
                <th class="active" style="height:60px">請求金額</th>
                 <td><%= money_notation(@cart_items.map{ |cp| (cp.item.price * cp.amount * @tax).round }.sum + @postage)%>円</td>
             </tr>
           </tbody>
       </table>
     </div>
   </div>

  <div class="row">
   <div class="col-xs-11 col-xs-offset-1 " >
     <table BORDER='0' style="font-size: 14pt; line-height: 150%; ">
        <tr>
          <th style="width:150px; height:90px">お支払い方法</th>
            <td style="width:800px" >
                    <% case @order.payment_method %>
                      <% when "クレジットカード" %>
                        <%= "クレジットカード" %>
                      <% when "銀行振り込み" %>
                        <%= "銀行振り込み" %>
                    <% end %>
            </td>
        </tr>

        <tr>
          <th style="height:90px">お届け先</th>
            <td  style="width:360px">
              <%#= f.hidden_field :address %>
              <%= @order.postal_code %>
              <%#= f.hidden_field :address %>
              <%= @order.address %>
              <%#= f.hidden_field :address %>
              <%= @order.name %>
            </td>
        </tr>
     </table>
    </div>
  </div>

  <div class="col-xs-2 col-xs-offset-2">
    <%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>

            <%= f.hidden_field :user_id, :value => current_user.id %>
            <!--支払い方法-->
            <%= f.hidden_field :payment_method, :value => @order.payment_method %>
            <!--お届け先-->
            <%= f.hidden_field :postal_code, :value => @order.postal_code %>
            <%= f.hidden_field :address, :value => @order.address %>
            <%= f.hidden_field :name, :value => @order.name %>
            <!--送料、請求金額-->
            <%= f.hidden_field :postage, :value => @postage %>
            <%= f.hidden_field :total_charge, :value => @cart_items.map{ |cp| (cp.item.price*cp.amount * @tax) }.sum.round + @postage %>
            <%= f.hidden_field :radio_button_number, :value => @order.radio_button_number %>

    <%= f.submit "注文を確定する", class: "btn btn-success btn-lg" %>
  </div>

  <% end %>

</div>
</div>
</div>