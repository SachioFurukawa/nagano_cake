<div class="container mt-5">
<div class="row">
<div class="ec-cart-index-main">

<h2>ショッピングカート</h2>

     <% if flash[:notice] %>
      <p class="success-message"><%= flash[:notice] %></p>
     <% end %>

        <div class="btn-box text-right">
          <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, class:"btn btn-danger" %>
        </div>
        <br>
          <table class="table"  BORDER='2' style="font-size: 12pt">
            <thead>
              <tr>
                <th class="active text-left" style="width:300px">商品名</th>
                <th class="active text-left" style="width:150px">単価（税込）</th>
                <th class="active text-left" style="width:60px">数量</th>
                <th class="active text-left" style="width:150px">小計</th>
                <th class="active" style="width:120px"></th>
              </tr>
            </thead>
            <tbody>
               <% @cart_items.each do |cart_item| %>
              <tr>
                <td class="text-left" style="height60px">
                   <%= attachment_image_tag cart_item.item, :image, format: 'jpg', fallback: "logo.png", size:'60x60' %>
                   <%= cart_item.item.name %>
                </td>
                <td class="text-left">
                   <%= cart_item.item.add_tax_price.to_s(:delimited) %>円
                </td>
                <td class="text-left">
                   <%= form_with model: cart_item, url: cart_item_path(cart_item.id), local:true, method: :patch, scope:cart_item do |f| %>
                     <%= f.number_field :amount, min:1%>
                     <%= f.hidden_field :item_id, :value => cart_item.item_id%>
                     <%= f.submit "変更", class: "btn btn-primary" %>
                   <% end %>
                </td>
                <td class="text-left">
                 　<%= cart_item.item.add_tax_price * cart_item.amount %>円
                </td>
                <td class="text-center">
                 　<%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger" %>
                </td>
              </tr>
                <% end %>
            </tbody>
          </table>

            <div class="btn-box text-right">
              <%= link_to "買い物を続ける", root_path, class: "btn btn-primary"  %>
            </div><br>

            <div>
              <div>
                    <h2 class="text-right">合計金額</h2>
                      <h3 class="btn-box text-right">
                        <%= @cart_items.map{ |w| (w.item.price*w.amount*1.1).round }.sum %>円
                      </h3>
              </div>
            </div>
            <br>
        <% if current_user.cart_items.present? %>
        <div class="create-order-btn-wrapper col-xs-4 col-xs-offset-4 ">
            <%= link_to "情報入力に進む", new_order_path, class:"btn btn-success form-control" %>
        </div>
        <% end %>

</div>
</div>
</div>